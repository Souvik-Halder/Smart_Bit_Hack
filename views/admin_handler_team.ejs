<%- include('layouts/header')  %> 
  
 
    <!-- alert code  -->
  
    <!-- alert code  -->
   

   <div class="container my-8">
<div class="overflow-x-auto relative shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left text-gray-400">
        <thead class="text-xs uppercase bg-gray-700 text-gray-400">
            <tr>
                <th scope="col" class="py-3 px-6">
                    ID
                </th>
                <th scope="col" class="py-3 px-6">
                    TeamName
                </th>
                <th scope="col" class="py-3 px-6">
                    Team Leader Name
                </th>
                <th scope="col" class="py-3 px-6">
                    Email ID
                </th>
                <th scope="col" class="py-3 px-6">
                    Phone Number
                </th>
                <th scope="col" class="py-3 px-6">
                    Whatsapp  Number
                </th>
                <th scope="col" class="py-3 px-6">
                   Institution
                </th>
                <th scope="col" class="py-3 px-6">
                    <span class="">Action</span>
                </th>
            </tr>
        </thead>
        <tbody>
            <% TeamDetailsarr.forEach((row,index) => { %>
             
                <tr class="bg-gray-800 border-gray-700 hover:bg-gray-600">
                    <th scope="row" class="py-4 px-6 font-medium whitespace-nowrap text-white">
                       <%= index+1 %> 
                    </th>
                    <td class="py-4 px-6">
                        <%= row.teamname %> 
                    </td>
                    <td class="py-4 px-6">
                        <%= row.teamleadername %> 
                    </td>
                    <td class="py-4 px-6">
                       <%= row.email %> 
                    </td>
                    <td class="py-4 px-6">
                     <%= row.phone %> 
                    </td>
                    <td class="py-4 px-6">
                        <%= row.whatsapp %> 
                       </td>
                       <td class="py-4 px-6">
                        <%= row.institution %> 
                       </td>
                    <td class="py-2 px-4 text-right">
                        <a href="/admin_team_member/<%-row.teamid %>" class="font-medium text-blue-600 dark:text-blue-500 hover:underline mx-2">Expand</a>
                        <form action="/select_option" method="post">
                            <input style="display:none;" type="email" name="email" value="<%= row.email %>">
                        <button type="submit" class="font-medium text-blue-600 dark:text-blue-500 hover:underline mx-2">Select</button>
                    </form>
                   </td>
                </tr>
               
            <% }) %>
           
        </tbody>
    </table>
</div>
</div> 
   
             <script src="/js/index.js"></script>   
        